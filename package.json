    "winston": "^3.2.1",
    "winston-transport-sentry-node": "^0.3.0"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "agendash": "^1.0.0",
    "eslint": "^7.0.0",
